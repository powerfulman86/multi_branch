<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="branch_restrictions_sale_user" model="ir.rule">
            <field name="name">User-branch</field>
            <field name="model_id" ref="model_res_branch"/>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="domain_force">[('id', '=', user.branch_id.id)]</field>
        </record>

        <record id="branch_restrictions_sale_user_all" model="ir.rule">
            <field name="name">User-branch All Documents</field>
            <field name="model_id" ref="model_res_branch"/>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
            <field name="domain_force">[('id', '=', user.branch_id.id)]</field>
        </record>
    </data>
</odoo>